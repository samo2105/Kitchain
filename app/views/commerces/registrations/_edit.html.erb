
<div class="card container p-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label 'Nombre de empresa' %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control', disabled: true%>
  </div>

  <div class="field form-group">
    <%= f.label 'Rut de empresa' %><br />
    <%= f.number_field :rol, autofocus: true, class:'form-control', disabled: true  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Dirección' %><br />
    <%= f.text_field :adress, autofocus: true, class:'form-control'  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Número de teléfono' %><br />
    <%= f.number_field :number, autofocus: true, class:'form-control'  %>
  </div>
  <div class="field">
    <%= f.label 'Correo' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label 'Contraseña' %> <small>Si desea cambiar la contraseña, presione <a class="" onclick="enablePassword()">aquí</a></small>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control', disabled: true %>
    <% if @minimum_password_length %>
      <small><%= @minimum_password_length %> caracteres mínimo</small>
    <% end %>
  </div>
<br>
  <div class="field">
    <%= f.label 'Confirmar contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', disabled: true %>
  </div>
    <br>
  <div class="field">
    <%= f.label 'Contraseña actual' %> <small>(Para guardar los cambios)</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Actualizar", class:'btn btn-primary col-sm-12 mx-auto' %>
  </div>
<% end %>
</div>
