<%= render 'commerces/shared/navbarcommerce' %>
<br><br>
<h1 class="text-center pb-2 text-white">Modificar perfil de empresa</h1>
<div class="card container p-3 w-75">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label 'Nombre de empresa' %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control', disabled: true%>
  </div>

  <div class="field form-group">
    <%= f.label 'Rut de empresa' %><br />
    <%= f.number_field :rol, autofocus: true, class:'form-control', disabled: true  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Dirección' %><br />
    <%= f.text_field :adress, autofocus: true, class:'form-control'  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Número de teléfono' %><br />
    <%= f.number_field :number, autofocus: true, class:'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>Si desea cambiar la contraseña, presione <p class="btn btn-primary" onclick="enablePassword()">aquí</p></i>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control', disabled: true %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', disabled: true %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
</div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
