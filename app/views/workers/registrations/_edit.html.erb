
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label 'Nombre' %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control', disabled: true  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Rut' %><br />
    <%= f.number_field :rol, autofocus: true, class:'form-control', disabled: true  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Dirección' %><br />
    <%= f.text_field :adress, autofocus: true, class:'form-control'  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Número de teléfono' %><br />
    <%= f.number_field :number, autofocus: true, class:'form-control'  %>
  </div>

  <div class="field form-group">
    <%= f.label 'Imagen de perfil' %>
    <%= f.file_field :image, class:'form-control' %>
  </div>

  <div class="field  form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control'  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field  form-group">
    <%= f.label 'Contraseña' %> <small>Dejar en blanco si no desea cambiar</small><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control'  %>
    <% if @minimum_password_length %>
      <small><%= @minimum_password_length %> caracteres mínimo</small>
    <% end %>
  </div>

  <div class="field  form-group">
    <%= f.label 'Confirmar contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control'  %>
  </div>

  <div class="field  form-group">
    <%= f.label 'Contraseña actual' %> <small>Para actualizar los datos</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control'  %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class:'btn btn-primary col-sm-12' %>
  </div>
<% end %>