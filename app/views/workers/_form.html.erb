<%= form_with(model: worker, local: true) do |form| %>
  <% if worker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(worker.errors.count, "error") %> prohibited this worker from being saved:</h2>

      <ul>
      <% worker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <%= form.label 'Nombre' %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :rol %>
    <%= form.number_field :rol, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :adress %>
    <%= form.text_field :adress, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :number %>
    <%= form.number_field :number, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label 'Sucursal' %><br>
    <%= form.select :office_id, if commerce_signed_in? then current_commerce.offices.pluck(:name, :id) else current_worker.office(:name, :id) end, worker_office_id: :id, class:'form-control'  %>
  </div>

  <div class="field form-group">
    <%= form.label 'Administrador', class:'text-center' %>
    <%= form.check_box :admin, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', class:'btn btn-primary col-sm-12' %>
  </div>
<% end %>
