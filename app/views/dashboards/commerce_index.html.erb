<%= render 'commerces/shared/navbarcommerce' %>
<br><br>

  <div class="container text-center card bg-info">
    <br>
    <h1 class="text-center text-white"> Bienvenido <%= current_commerce.name %></h1>
    <br>
    <hr>

    <div class="card p-1">
      <br>
      <h1 class="text-center">Tus sucursales </h1>
      <hr>
      <h3 class="m-0 p-0"> <%= link_to 'Nueva Sucursal', new_office_path, data:{remote:true}, class:'btn btn-primary col-sm-12' %></h3>
      <br>
      <div style="overflow-x:auto" class="p-3">
        <table class="table table-striped table-bordered table-sm dtBasicExample" cellspacing="0">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Número</th>
            <th>Trabajadores</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            <%= render @offices %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
    <br>


    <div class="card">
      <br>
      <h1 class="text-center">Tus trabajadores </h1>
      <hr>
      <h3 class="m-0 p-0"> <%= button_to 'Nuevo trabajador', new_worker_registration_path, method: :get, class:'btn btn-primary col-sm-12' %></h3>
      <br>
      <div style="overflow-x:auto " class="p-3">
        <table class="table table-striped table-bordered table-sm dtBasicExample" cellspacing="0">
          <thead >
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Sucursal</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <%= render @workers %>
          </tbody>
        </table>
      </div>
    </div>


    <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalLabel">New message</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Recipient:</label>
                <input type="text" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Message:</label>
                <textarea class="form-control" id="message-text"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
</div>
  <br>
