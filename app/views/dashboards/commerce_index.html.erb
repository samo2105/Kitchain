<%= render 'commerces/shared/navbarcommerce' %>
<br><br>

  <div class="container text-center card bg-info">
    <br>
    <h1 class="text-center text-white"> Bienvenido <%= current_commerce.name %></h1>
    <br>
    <hr>

    <div class="card p-1">
      <br>
      <h1 class="text-center">Tus sucursales </h1>
      <hr>
      <h3 class="m-0 p-0"> <%= link_to 'Nueva Sucursal', new_office_path, data:{remote:true}, class:'btn btn-primary col-sm-12', style:'position: unset' %></h3>
      <br>
      <div style="overflow-x:auto" class="p-3">
        <table class="table table-striped table-bordered table-sm dtBasicExample" cellspacing="0">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Número</th>
            <th>Trabajadores</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            <%= render @offices %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
    <br>


    <div class="card">
      <br>
      <h1 class="text-center">Tus trabajadores </h1>
      <hr>
      <h3 class="m-0 p-0"> <%= link_to 'Nuevo trabajador', new_worker_path ,data: {remote:true}, class:'btn btn-primary col-sm-12', style:'position: unset' %></h3>
      <br>
      <div style="overflow-x:auto " class="p-3">
        <table class="table table-striped table-bordered table-sm dtBasicExample" cellspacing="0">
          <thead >
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Sucursal</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <%= render @workers %>
          </tbody>
        </table>
      </div>
    </div>
</div>
