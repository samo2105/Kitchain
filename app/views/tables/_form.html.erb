<%= form_with(model: table) do |form| %>
  <% if table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(table.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% table.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label 'Descripción' %>
    <%= form.text_field :description, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label 'Tamaño' %>
    <%= form.select :size, (0..15).map {|i| [i,i]}, class:'form-control' %>
  </div>


  <div class="actions">
    <%= form.submit 'Enviar', class:'btn btn-primary col-sm-10 mx-auto' %>
  </div>
<% end %>