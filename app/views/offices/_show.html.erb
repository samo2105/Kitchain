<div class="container">
<div class="card">
  <% if @office.image.attached? %>
    <%= image_tag(@office.image, class:"card-img img-thumbnail") %>
  <% else %>
    <img src="https://dojiw2m9tvv09.cloudfront.net/4/product/sucursal9736.png" class="card-img img-thumbnail" alt="...">
  <% end %>
    <div class="card-body">
      <h5 class="card-title">Sucursal: <%= @office.name %> </h5>
      <p class="card-text">
        Dirección: <%= @office.adress %> <br>
        Número: +562<%= @office.number %> <br>
        <h3>Trabajadores</h3>
      <div style="overflow-x:auto " class="p-3">
        <table class="table table-striped table-bordered table-sm dtBasicExample" cellspacing="0">
          <thead >
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Sucursal</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <%= render @workers %>
          </tbody>
        </table>
      </div>
      </p>
      <%= link_to 'Editar', edit_office_path(@office),data: {remote: true}, class:'btn btn-primary' %>
    </div>
  </div>
</div>