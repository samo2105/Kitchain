<%= render 'commerces/shared/navbarcommerce' %>
<br><br>
<div class="container text-center card bg-info">
  <br>
  <h1 class="text-white">Tus sucursales </h1>
  <hr>
  <h3 class="m-0 p-0"> <%= link_to 'Nueva Sucursal', new_office_path, class:'btn btn-primary col-sm-12' %></h3>
  <hr>
  <div style="overflow-x:auto">
    <table class="table bg-white col-sm-12">
      <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Dirección</th>
        <th>Número</th>
        <th>Trabajadores</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @offices.each do |office| %>
        <tr>
          <td><%= office.name %></td>
          <td><%= office.adress %></td>
          <td><%= office.number %></td>
          <td><%= office.workers.count %></td>
          <td><div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Acciones
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Ver sucursal', office, class:'dropdown-item' %>
              <%= link_to 'Editar', edit_office_path(office), class:'dropdown-item' %>
              <%= link_to 'Eliminar', office, method: :delete, data: {confirm: '¿Estás seguro? Esta acción es irreversible y eliminará todos los datos de esta oficina'}, class:'dropdown-item' %>
            </div>
          </div></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
<br>